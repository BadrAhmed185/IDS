@model IEnumerable<IDS.Models.Ticket>

@{
    ViewData["Title"] = "Diagnosis Nurse page";

    Layout = null;
}


<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ًصفحة ممرض العيادة</title>

    <link rel="stylesheet" href="~/css/CPresident.css">

  @*   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"> *@


</head>
<body>
    <div class="container">
        <div class="header">
            <div class="header-content">
                <div class="logo">
                    <img src="~/images/logo.png" alt="شعار العيادة" class="logo-img">
                </div>
                <div class="header-main">
                 
                    <div class="header-text">
                        <h1>مرحبًا بكم</h1>
                        <h2>الحالات المتوجهه لعيادة التشخيص</h2>
                        <p>م/@User.FindFirst("DocName")?.Value</p>
                    </div>
                    <div class="search-container">
                        <form action="#" method="get">
                            <input type="text" placeholder="ابحث باسم المريض أو رقم المذكرة..." class="search-input">
                            <button type="submit" class="search-button">
                                <i class="fas fa-search"></i>
                            </button>
                        </form>
                    </div>
                    <div class="Navs">
                       

                        <a asp-action="SignOut" asp-controller="Auth" class="btn custom-hover" style="text-decoration: none;">
                            خروج
                        </a>

                    </div>
                </div>
            </div>
        </div>

        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>رقم التذكرة</th>
                        <th>تاريخ الزيارة</th>
                        <th>اسم المريض</th>
                        <th>رقم الهاتف</th>
                        <th class="actions-header">الإجراءات</th>
                    </tr>
                </thead>



                <tbody>
                    
                        @foreach (var entity in Model)
                        {
                        <tr>
                            <td>@entity.TicketId</td>
                            <td>@entity.AppointmentDate</td>
                            <td>@entity.Patient.Name</td>
                            <td>@entity.Patient.phoneNumber</td>


                            <td class="doctor-select">
                                <form asp-action="EnteringTicket" asp-route-id="@entity.TicketId" method="post">

                                    <button type="submit" class="action-link view"><i class="fas fa-eye"></i>دخول</button>

                                </form>

                            </td>

                        </tr>


                        }
                  
                </tbody>
            </table>
        </div>

        <div class="footer">
            <p>جميع الحقوق محفوظة 2025 © فريق تطوير نظام "IDS"</p>
        </div>
    </div>
</body>
</html>

